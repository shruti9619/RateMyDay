<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@android:color/holo_blue_bright"
        android:id="@+id/activity_safe_comp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.learn.shruti.ratemyday.SafeCompActivity">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true" android:layout_alignParentStart="true" android:padding="20px"
            android:layout_margin="20px" android:background="?attr/colorControlHighlight">
        <TextView
                android:text="Report Issues without your name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2" android:padding="10dp"
                android:textColor="@color/white" android:textStyle="normal|bold" android:textSize="18sp"
                android:textAlignment="center"/>
        <Spinner
                android:layout_width="match_parent"
                android:id="@+id/issuespinner" android:layout_marginTop="10dp"
                android:padding="5dp" android:layout_height="40dp" android:entries="@array/issueArray"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:hint="Description (optional)" android:layout_marginBottom="20px"
                android:layout_marginTop="20px" android:textColor="@android:color/white"
                android:id="@+id/compdesctext"/>

        <Button
                android:text="Submit Safe Complain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/addcompbutton"
                android:layout_marginTop="30px" android:background="@color/colorAccent"
                android:textStyle="bold"/>
    </LinearLayout>


</RelativeLayout>
